{
  "name": "lego-instructions",
  "private": true,
  "type": "module",
  "Description": "",
  "author": {
    "name": "m.menard",
    "email": "mlmmayhem@gmail.com"
  },
  "repository": {
    "github": ""
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "apps/api/*",
    "apps/web/*",
    "packages/api-core",
    "packages/shared/*",
    "packages/core/*",
    "packages/features/*",
    "packages/backend/*",
    "packages/tools/*",
    "packages/dev/*"
  ],
  "scripts": {
    "dev": "lsof -ti:3000 -ti:9000 | xargs kill -9 2>/dev/null || true; docker info > /dev/null 2>&1 || (echo '\\nâŒ Docker is not running. Please start Docker Desktop first.\\n' && exit 1) && docker-compose up -d && concurrently -n api,web -c blue,green \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:services": "docker-compose up -d",
    "dev:api": "pnpm --filter lego-api dev",
    "dev:web": "pnpm --filter main-app dev",
    "dev:all-web": "turbo run dev --filter='./apps/web/*'",
    "build": "turbo run build",
    "build:changed": "turbo run build --filter='...[HEAD^1]'",
    "analyze": "./scripts/local-coderabbit-analysis.sh",
    "analyze:changed": "./scripts/local-coderabbit-analysis.sh --scope changed",
    "analyze:fix": "./scripts/local-coderabbit-analysis.sh --fix",
    "clean": "turbo run clean",
    "playwright": "node scripts/run-playwright.js",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:reset": "turbo run db:reset",
    "db:studio": "turbo run db:studio",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:fix": "pnpm audit fix",
    "security:check": "pnpm run security:audit && pnpm run security:lint",
    "security:lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0 --config eslint.config.security.js",
    "security:scan": "pnpm run security:check && pnpm run security:headers:test",
    "security:headers:test": "node scripts/test-security-headers.js",
    "gen:package": "turbo gen package",
    "gen:component": "turbo gen component",
    "gen:api": "turbo gen api",
    "gen:prd": "turbo gen prd",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "coderabbit:setup": "./scripts/setup-coderabbit.sh",
    "coderabbit:validate": "pnpm run lint:all && pnpm run check-types:all && pnpm run test:all && pnpm run security:lint"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "knip": "5.82.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@changesets/cli": "^2.29.5",
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^2.5.4",
    "@types/axe-core": "3.0.6",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "canvas": "^3.1.2",
    "concurrently": "^9.1.0",
    "dependency-cruiser": "17.3.6",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "16.1.6",
    "prettier": "^3.6.2",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.20.1",
    "turbo": "^2.5.4",
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "**/package.json": [
      "node scripts/sync-dependencies-staged.js",
      "prettier --write"
    ]
  },
  "exports": {},
  "overrides": {
    "esbuild": "^0.21.5",
    "@smithy/types": "4.9.0"
  }
}
