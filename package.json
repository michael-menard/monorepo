{
  "name": "react-constructs",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "apps/api/*",
    "apps/web/*",
    "packages/shared",
    "packages/core/ui",
    "packages/core/auth",
    "packages/core/accessibility",
    "packages/core/cache",
    "packages/core/design-system",
    "packages/features/gallery",
    "packages/features/moc-instructions",
    "packages/features/profile",
    "packages/features/wishlist",
    "packages/tools/upload",
    "packages/tools/mock-data",
    "packages/dev/tech-radar"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:changed": "turbo run build --filter='...[HEAD^1]'",
    "dev": "./scripts/start-full-dev.sh",
    "start:lego": "./scripts/start-full-dev.sh",
    "kill-ports": "./scripts/kill-ports.sh --app-ports",
    "kill-port": "./scripts/kill-ports.sh",
    "lint": "turbo run lint --filter='...[HEAD^1]'",
    "lint:all": "turbo run lint",
    "lint:changed:main": "turbo run lint --filter='...[origin/main]'",
    "lint:changed": "bash scripts/lint-changed-files.sh",
    "lint:files:main": "bash scripts/lint-changed-files.sh origin/main",
    "lint:root": "eslint . --ext .js,.jsx,.ts,.tsx --fix --max-warnings 0",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "check-types": "turbo run check-types --filter='...[HEAD^1]'",
    "check-types:all": "turbo run check-types",
    "test": "turbo run test --filter='...[HEAD^1]'",
    "test:all": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:ui": "turbo run test:ui",
    "test:coverage": "turbo run test:coverage",
    "analyze": "./scripts/local-coderabbit-analysis.sh",
    "analyze:changed": "./scripts/local-coderabbit-analysis.sh --scope changed",
    "analyze:fix": "./scripts/local-coderabbit-analysis.sh --fix",
    "pre-push-check": "./.husky/pre-push origin dummy",
    "test:e2e": "turbo run test --filter=@repo/playwright",
    "test:e2e:all": "turbo run test --filter=@repo/playwright",
    "test:e2e:auth": "turbo run test:auth --filter=@repo/playwright",
    "test:e2e:login": "turbo run test --filter=@repo/playwright -- --grep='Login'",
    "test:e2e:signup": "turbo run test --filter=@repo/playwright -- --grep='Signup'",
    "test:e2e:navigation": "turbo run test:navigation --filter=@repo/playwright",
    "test:e2e:navigation:headed": "turbo run test:navigation --filter=@repo/playwright -- --headed",
    "test:e2e:navigation:debug": "turbo run test:navigation --filter=@repo/playwright -- --debug",
    "test:navigation": "turbo run test --filter=@repo/lego-moc-instructions-app -- src/components/Layout src/components/Navigation src/components/__tests__/Layout-Navigation",
    "test:navigation:watch": "turbo run test --filter=@repo/lego-moc-instructions-app -- src/components/Layout src/components/Navigation src/components/__tests__/Layout-Navigation --watch",
    "test:e2e:headed": "turbo run test:headed --filter=@repo/playwright",
    "test:e2e:debug": "turbo run test:debug --filter=@repo/playwright",
    "test:e2e:ui": "turbo run test:ui --filter=@repo/playwright",
    "clean": "turbo run clean",
    "playwright": "node scripts/run-playwright.js",
    "sync-deps": "node scripts/sync-dependencies.js",
    "sync-deps:check": "SYNC_DEPS_MODE=check node scripts/sync-dependencies-staged.js **/package.json",
    "logs:lego": "tail -f logs/lego-projects-api.log",
    "env:local": "./scripts/switch-environment.sh local",
    "env:aws": "./scripts/switch-environment.sh aws",
    "env:aws:dev": "./scripts/switch-environment.sh aws dev",
    "env:aws:prod": "./scripts/switch-environment.sh aws production",
    "env:status": "./scripts/switch-environment.sh status",
    "test:auth": "turbo run test:auth --filter=@repo/playwright",
    "test:auth:headed": "turbo run test:auth:headed --filter=@repo/playwright",
    "test:auth:debug": "turbo run test:auth:debug --filter=@repo/playwright",
    "test:auth:setup": "turbo run test:auth:setup --filter=@repo/playwright",
    "storybook": "turbo run storybook --filter=@repo/storybook",
    "build-storybook": "turbo run build-storybook --filter=@repo/storybook",
    "storybook:dev": "pnpm --filter @repo/storybook dev",
    "docs:dev": "turbo run dev --filter=@repo/lego-moc-docs",
    "docs:build": "turbo run build --filter=@repo/lego-moc-docs",
    "docs:serve": "turbo run serve --filter=@repo/lego-moc-docs",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "deploy": "turbo run deploy",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:fix": "pnpm audit fix",
    "security:check": "pnpm run security:audit && pnpm run security:lint",
    "security:lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0 --config eslint.config.security.js",
    "security:scan": "pnpm run security:check && pnpm run security:headers:test",
    "security:headers:test": "node scripts/test-security-headers.js",
    "gen:package": "turbo gen package",
    "gen:component": "turbo gen component",
    "gen:api": "turbo gen api",
    "gen:prd": "turbo gen prd",
    "turbo:login": "turbo login",
    "turbo:link": "turbo link",
    "turbo:unlink": "turbo unlink",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "coderabbit:setup": "./scripts/setup-coderabbit.sh",
    "coderabbit:validate": "pnpm run lint:all && pnpm run check-types:all && pnpm run test:all && pnpm run security:lint",
    "ai:review": "auggie --rules __docs__/AUGGIE_RULES.md",
    "ai:coderabbit": "echo 'Create a PR to trigger CodeRabbit review, or visit https://app.coderabbit.ai/'",
    "ai:integrate": "echo 'Use: pnpm run ai:review for Auggie assistance, then create PR for CodeRabbit review'"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@changesets/cli": "^2.29.5",
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^2.5.4",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "canvas": "^3.1.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "16.1.6",
    "prettier": "^3.6.2",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.20.1",
    "turbo": "^2.5.4",
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "**/package.json": [
      "node scripts/sync-dependencies-staged.js",
      "prettier --write"
    ]
  },
  "exports": {},
  "pnpm": {
    "overrides": {
      "esbuild": "^0.21.5",
      "@smithy/types": "4.9.0"
    }
  }
}
