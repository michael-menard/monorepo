{
  "name": "react-constructs",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "apps/api/*",
    "apps/web/*",
    "packages/shared",
    "packages/core/ui",
    "packages/core/auth",
    "packages/core/accessibility",
    "packages/core/cache",
    "packages/core/design-system",
    "packages/features/gallery",
    "packages/features/moc-instructions",
    "packages/features/profile",
    "packages/features/wishlist",
    "packages/tools/upload",
    "packages/tools/mock-data",
    "packages/dev/tech-radar"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "./scripts/start-full-dev.sh",
    "start:lego": "./scripts/start-full-dev.sh",
    "kill-ports": "./scripts/kill-ports.sh --app-ports",
    "kill-port": "./scripts/kill-ports.sh",
    "lint": "turbo run lint",
    "lint:root": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "format": "turbo run format",
    "format:root": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:ui": "turbo run test:ui",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:all": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app",
    "test:e2e:auth": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app -- --grep='Auth Flow'",
    "test:e2e:login": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app -- --grep='Login'",
    "test:e2e:signup": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app -- --grep='Signup'",
    "test:e2e:navigation": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app -- tests/navigation/",
    "test:e2e:navigation:headed": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app -- tests/navigation/ --headed",
    "test:e2e:navigation:debug": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app -- tests/navigation/ --debug",
    "test:navigation": "turbo run test --filter=@repo/lego-moc-instructions-app -- src/components/Layout src/components/Navigation src/components/__tests__/Layout-Navigation",
    "test:navigation:watch": "turbo run test --filter=@repo/lego-moc-instructions-app -- src/components/Layout src/components/Navigation src/components/__tests__/Layout-Navigation --watch",
    "test:e2e:headed": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app -- --headed",
    "test:e2e:debug": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app -- --debug",
    "test:e2e:ui": "turbo run test:e2e --filter=@repo/lego-moc-instructions-app -- --ui",
    "clean": "turbo run clean",
    "playwright": "node scripts/run-playwright.js",
    "sync-deps": "node scripts/sync-dependencies.js",
    "logs:auth": "tail -f logs/auth-service.log",
    "logs:lego": "tail -f logs/lego-projects-api.log",
    "seed:users": "cd apps/api/auth-service && pnpm seed:users",
    "seed:users:clear": "cd apps/api/auth-service && pnpm seed:users:clear",
    "test:auth": "cd apps/web/lego-moc-instructions-app && pnpm test:auth",
    "test:auth:headed": "cd apps/web/lego-moc-instructions-app && pnpm test:auth:headed",
    "test:auth:debug": "cd apps/web/lego-moc-instructions-app && pnpm test:auth:debug",
    "test:auth:setup": "cd apps/web/lego-moc-instructions-app && pnpm test:auth:setup",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "docs:dev": "turbo run dev --filter=@repo/lego-moc-docs",
    "docs:build": "turbo run build --filter=@repo/lego-moc-docs",
    "docs:serve": "turbo run serve --filter=@repo/lego-moc-docs",

    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "deploy": "turbo run deploy",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:fix": "pnpm audit fix",
    "security:check": "pnpm run security:audit && pnpm run security:lint",
    "security:lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0 --config eslint.config.security.js",
    "security:scan": "pnpm run security:check && pnpm run security:headers:test",
    "security:headers:test": "node scripts/test-security-headers.js",
    "gen:package": "turbo gen package",
    "gen:component": "turbo gen component",
    "gen:api": "turbo gen api",
    "gen:prd": "node generators/prd-gen/bin/prd-gen.js",
    "gen:api:legacy": "node generators/api-gen/bin/api-gen.js",
    "turbo:login": "turbo login",
    "turbo:link": "turbo link",
    "turbo:unlink": "turbo unlink",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "coderabbit:setup": "./scripts/setup-coderabbit.sh",
    "coderabbit:validate": "pnpm run lint && pnpm run check-types && pnpm run test && pnpm run security:lint",
    "ai:review": "auggie --rules __docs__/AUGGIE_RULES.md",
    "ai:coderabbit": "echo 'Create a PR to trigger CodeRabbit review, or visit https://app.coderabbit.ai/'",
    "ai:integrate": "echo 'Use: pnpm run ai:review for Auggie assistance, then create PR for CodeRabbit review'"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@storybook/test": "^8.6.14",
    "@types/nodemailer": "^6.4.17",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.3",
    "nodemailer": "^7.0.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@changesets/cli": "^2.29.5",
    "@chromatic-com/storybook": "^4.0.1",
    "@reduxjs/toolkit": "^2.8.2",
    "@storybook/addon-a11y": "^9.0.17",
    "@storybook/addon-docs": "^9.0.17",
    "@storybook/react-vite": "^9.0.17",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^2.5.4",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "canvas": "^3.1.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "16.1.6",
    "prettier": "^3.6.2",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.20.1",
    "storybook": "^9.0.17",
    "turbo": "^2.5.4",
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.21.5"
    }
  },
  "exports": {}
}
