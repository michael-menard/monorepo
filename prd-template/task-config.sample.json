{
  "name": "feature-<name>",
  "description": "Tasks for <feature-name> generated from PRD using small vertical slices with build-first gating.",
  "input_file": ".taskmaster/prds/<feature-prd>.txt",
  "output_dir": ".taskmaster/tasks/feature-<name>",
  "task_categories": ["feature"],
  "priority_levels": ["high", "medium", "low"],
  "estimated_effort": ["<1 hour", "1-2 hours"],
  "dependencies": true,
  "acceptance_criteria": true,
  "technical_details": true,
  "include_test_cases": true,
  "include_edge_cases": true,
  "output_format": "md",
  "group_tasks_by": "none",
  "granularity": {
    "max_files_per_task": 3,
    "max_loc_per_task": 80,
    "max_duration": "2h",
    "max_new_files": 1
  },
  "gating": {
    "phased": true,
    "phaseA_build_first": true,
    "require_subtasks": [
      "Build Green",
      "Unit Tests Green",
      "E2E Smoke Green"
    ]
  },
  "testing": {
    "frontend_runner": "vitest",
    "frontend_command": "pnpm test:run",
    "backend_runner": "jest",
    "backend_command": "pnpm test:run",
    "http_runner": "supertest",
    "e2e_runner": "playwright",
    "e2e_command": "pnpm exec playwright test --timeout=15000",
    "mocks_required_in_unit": true,
    "e2e_use_real_services": true,
    "max_e2e_timeout_ms": 15000,
    "coverage_thresholds": {
      "lines": 0.9,
      "branches": 0.85,
      "functions": 0.9,
      "statements": 0.9
    }
  },
  "npm_packages": {
    "required": [],
    "dev_only": []
  },
  "app_structure": {
    "type": "service-or-app",
    "framework": "node-or-react",
    "tests_colocation": "__tests__"
  }
}


