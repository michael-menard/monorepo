{
  "name": "@repo/health-check-core",
  "version": "1.0.0",
  "description": "Platform-agnostic health check business logic",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
