{
  "name": "@repo/pii-sanitizer",
  "version": "1.0.0",
  "description": "PII sanitization utilities for logs, errors, and analytics",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "tsup": "^8.5.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.5"
  },
  "files": [
    "dist",
    "src"
  ]
}
