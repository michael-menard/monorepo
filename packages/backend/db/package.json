{
  "name": "@repo/db",
  "version": "1.0.0",
  "description": "Shared database client and schema for Lambda functions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./dist/schema.js"
    },
    "./generated-schemas": {
      "types": "./dist/generated-schemas.d.ts",
      "default": "./dist/generated-schemas.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "0.8.3",
    "pg": "^8.13.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "tsx": "4.20.6",
    "typescript": "^5.8.0"
  },
  "keywords": [
    "database",
    "drizzle",
    "postgresql",
    "lambda",
    "serverless"
  ]
}
