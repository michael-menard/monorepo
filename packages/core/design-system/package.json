{
  "name": "@repo/design-system",
  "version": "1.0.0",
  "description": "Design system tokens, CSS variables, and Tailwind configuration for the monorepo",
  "type": "module",
  "exports": {
    "./design-system": {
      "import": "./src/design-system.ts",
      "types": "./src/design-system.ts"
    },
    "./design-tokens.css": "./src/design-tokens.css",
    "./global-styles.css": "./src/global-styles.css",
    "./tailwind-preset": "./src/tailwind-preset.js"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch --no-threads --pool=forks --max-workers=4",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --fix .",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "3.4.17"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "eslint": "^9.30.0",
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "tailwind",
    "css",
    "monorepo"
  ]
}
