{
  "name": "@repo/design-system",
  "version": "1.0.0",
  "description": "Design system tokens, CSS variables, and Tailwind configuration for the monorepo",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./design-tokens.css": "./src/design-tokens.css",
    "./tailwind-preset": "./src/tailwind-preset.js"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch --no-threads --pool=forks --max-workers=4",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vitest": "^3.2.4",
    "eslint": "^9.30.0"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "tailwind",
    "css",
    "monorepo"
  ]
}
