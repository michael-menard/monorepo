{
  "name": "@repo/accessibility",
  "version": "1.0.0",
  "description": "Accessibility utilities including keyboard navigation and drag & drop functionality",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch --no-threads --pool=forks --max-workers=4",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --fix .",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.468.0",
    "react": "^19.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "25.2.1",
    "@types/react": "^19.1.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "eslint": "^9.30.0",
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^19.1.0"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "keyboard-navigation",
    "drag-drop",
    "react"
  ]
}
