{
  "name": "@repo/hooks",
  "version": "0.1.0",
  "description": "Consolidated general-purpose React hooks for the LEGO MOC platform",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "exports": {
    "./useLocalStorage": {
      "import": "./dist/useLocalStorage.js",
      "types": "./dist/useLocalStorage.d.ts"
    },
    "./useUnsavedChangesPrompt": {
      "import": "./dist/useUnsavedChangesPrompt.js",
      "types": "./dist/useUnsavedChangesPrompt.d.ts"
    },
    "./useDelayedShow": {
      "import": "./dist/useDelayedShow.js",
      "types": "./dist/useDelayedShow.d.ts"
    },
    "./useMultiSelect": {
      "import": "./dist/useMultiSelect.js",
      "types": "./dist/useMultiSelect.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint --fix . --fix --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest --watch --no-threads --pool=forks --max-workers=4"
  },
  "dependencies": {
    "@repo/logger": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.19.1",
    "@types/react": "^19.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.30.0",
    "jsdom": "^25.0.1",
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vite-plugin-dts": "4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "@tanstack/react-router": "^1.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-router": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  }
}
