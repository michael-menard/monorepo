{
  "name": "@repo/file-list",
  "version": "0.1.0",
  "description": "Generic file list display component with data table layout",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --fix src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@repo/app-component-library": "workspace:*",
    "lucide-react": "^0.263.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "25.2.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.45.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "keywords": [
    "react",
    "file-list",
    "data-table",
    "ui-component",
    "atomic-design"
  ],
  "author": "Your Team",
  "license": "MIT"
}
