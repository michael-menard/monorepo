{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@repo/ui": ["../ui/src/index.ts"],
      "@repo/ui/*": ["../ui/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../ui/src/FileUpload/index.tsx",
    "../ui/src/dialog.tsx",
    "../ui/src/form.tsx",
    "../ui/src/input.tsx",
    "../ui/src/select.tsx",
    "../ui/src/button.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "../ui/src/**/*.test.*",
    "../ui/src/**/__tests__/**"
  ]
} 