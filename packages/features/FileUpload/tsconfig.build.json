{
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": false,
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "index.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "schemas.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__tests__/**",
    "test/**",
    "src/**"
  ]
}
