{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/ui": ["../../ui/src/index.ts"],
      "@repo/ui/*": ["../../ui/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo-gallery.json"
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": [
    "dist", 
    "node_modules", 
    "**/*.test.ts", 
    "**/*.test.tsx", 
    "**/*.stories.ts", 
    "**/*.stories.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts"
  ]
} 