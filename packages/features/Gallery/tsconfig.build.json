{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "stripInternal": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "include": [
    "src/index.tsx",
    "src/schemas/**/*.ts",
    "src/store/**/*.ts",
    "src/store/**/*.tsx",
    "src/types/**/*.ts",
    "src/components/**/index.tsx",
    "src/hooks/**/*.ts",
    "src/hooks/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/test/**",
    "**/__tests__/**",
    "**/example.tsx",
    "**/examples/**",
    "src/components/Lightbox/**",
    "src/components/AlbumView/**"
  ]
}
