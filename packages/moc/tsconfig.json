{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@repo/ui": ["../ui/src/index.ts"],
      "@repo/ui/*": ["../ui/src/*"],
      "@repo/gallery": ["../gallery/src/index.ts"],
      "@repo/gallery/*": ["../gallery/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules", 
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**"
  ]
} 