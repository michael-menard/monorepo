{
  "name": "@monorepo/pii-sanitizer",
  "version": "1.0.0",
  "description": "PII sanitization utilities for logs, errors, and analytics",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "tsup": "^8.5.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.5"
  }
}
