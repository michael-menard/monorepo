    "eslint": "^9.30.0",
    "typescript": "5.8.3",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "prisma": "^5.22.0",
