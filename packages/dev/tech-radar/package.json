{
  "name": "@repo/tech-radar",
  "version": "1.0.0",
  "description": "Interactive Tech Radar for the monorepo",
  "main": "./dist/tech-radar.js",
  "types": "./dist/tech-radar.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/tech-radar.js",
      "require": "./dist/tech-radar.js",
      "types": "./dist/tech-radar.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "generate": "tsx generate-radar.ts",
    "check-types": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix src/ --ext .ts,.tsx --max-warnings 20",
    "test": "vitest run",
    "test:watch": "vitest --watch --no-threads --pool=forks --max-workers=4",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.3",
    "lucide-react": "^0.468.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "4.2.2",
    "eslint": "^9.30.0",
    "jsdom": "^25.0.1",
    "tsx": "^4.6.2",
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
