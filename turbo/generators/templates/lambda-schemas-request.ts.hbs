import { z } from 'zod'

/**
 * Schema for request body validation
 * 
 * TODO: Customize this schema based on your Lambda's expected input
 */
export const RequestSchema = z.object({
  // Example fields - customize as needed
  name: z.string().min(1, 'Name is required').max(100, 'Name too long'),
  description: z.string().optional(),
  tags: z.array(z.string()).optional(),
  metadata: z.record(z.string()).optional(),
})

export type RequestData = z.infer<typeof RequestSchema>

/**
 * Schema for path parameters validation
 * 
 * TODO: Customize based on your API Gateway route parameters
 */
export const PathParametersSchema = z.object({
  id: z.string().min(1, 'ID is required'),
})

export type PathParameters = z.infer<typeof PathParametersSchema>

/**
 * Schema for query parameters validation
 * 
 * TODO: Customize based on your expected query parameters
 */
export const QueryParametersSchema = z.object({
  limit: z.string().regex(/^\d+$/).transform(Number).optional(),
  offset: z.string().regex(/^\d+$/).transform(Number).optional(),
  filter: z.string().optional(),
})

export type QueryParameters = z.infer<typeof QueryParametersSchema>
