{
  "name": "@repo/{{kebabCase name}}",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    {{#if (eq type "react-lib")}}
    "dev": "vite",
    "build": "vite build && tsc",
    {{else if (eq type "node-lib")}}
    "dev": "tsc --watch",
    "build": "tsc",
    {{else}}
    "dev": "vite build --watch",
    "build": "vite build",
    {{/if}}
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf dist node_modules"{{#if includeStorybook}},
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"{{/if}}
  },
  "dependencies": {
    {{#if (eq type "react-lib")}}
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@repo/ui": "workspace:*",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
    {{else if (eq type "feature")}}
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@repo/ui": "workspace:*",
    "@repo/shared": "workspace:*",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
    {{else if (eq type "shared")}}
    "clsx": "^2.1.1"
    {{else}}
    "@types/node": "^24.1.0"
    {{/if}}
  },
  "devDependencies": {
    {{#if (or (eq type "react-lib") (eq type "feature"))}}
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    {{/if}}
    {{#if includeStorybook}}
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/react": "^9.0.18",
    "storybook": "^9.0.17",
    {{/if}}
    "eslint": "^9.30.0",
    "jsdom": "^26.1.0",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  },
  {{#if (or (eq type "react-lib") (eq type "feature"))}}
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
  {{/if}}
}
