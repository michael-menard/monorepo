{
  "name": "@repo/{{kebabCase name}}",
  "version": "1.0.0",
  "private": true,
  "description": "{{description}}",
  "type": "module",
  {{#if (eq type "react-lib")}}
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  {{else if (eq type "node-lib")}}
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  {{else}}
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  {{/if}}
  "scripts": {
    {{#if (eq type "react-lib")}}
    "dev": "vite",
    "build": "vite build && tsc",
    {{else if (eq type "node-lib")}}
    "dev": "tsc --watch",
    "build": "tsc",
    {{else}}
    "dev": "vite build --watch",
    "build": "vite build",
    {{/if}}
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch --no-threads --pool=forks --max-workers=4",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf dist node_modules"{{#if includeStorybook}},
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"{{/if}}
  },
  {{#if (eq type "react-lib")}}
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vitest": "^3.2.4"{{#if includeStorybook}},
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "storybook": "^8.6.14"{{/if}}
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
  {{else if (eq type "node-lib")}}
  "devDependencies": {
    "@types/node": "^24.6.2",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  }
  {{else}}
  "devDependencies": {
    "typescript": "5.8.3",
    "vite": "^5.2.10",
    "vitest": "^3.2.4"
  }
  {{/if}}
}
