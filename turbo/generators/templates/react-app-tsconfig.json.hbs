{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services/*": ["./src/services/*"],
      {{#if includeRedux}}"@/store/*": ["./src/store/*"],{{/if}}
      "@/types/*": ["./src/types/*"]{{#if includeRouting}},
      "@/routes/*": ["./src/routes/*"]{{/if}}{{#if (eq type "module")}},
      "@/pages/*": ["./src/pages/*"]{{/if}}
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
