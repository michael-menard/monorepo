{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    // Use classic node module resolution to allow extensionless imports for TypeScript source files
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo-gallery.json",
    "baseUrl": ".",
    "types": ["react", "react-dom"],
    "paths": {
      "@repo/ui": ["../../packages/ui/src/index.ts"],
      "@repo/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
} 