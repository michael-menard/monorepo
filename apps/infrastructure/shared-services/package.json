{
  "name": "@repo/shared-infrastructure",
  "version": "1.0.0",
  "private": true,
  "description": "Shared AWS infrastructure for LEGO MOC platform",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "deploy:dev": "cdk deploy --all --context environment=dev",
    "deploy:staging": "cdk deploy --all --context environment=staging",
    "deploy:prod": "cdk deploy --all --context environment=production",
    "destroy": "cdk destroy --all",
    "diff": "cdk diff --all",
    "synth": "cdk synth --all",
    "bootstrap": "cdk bootstrap",
    "ls": "cdk ls"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "20.6.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "aws-cdk": "2.100.0",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "2.100.0",
    "constructs": "^10.0.0"
  },
  "keywords": [
    "aws",
    "cdk",
    "infrastructure",
    "shared-services",
    "lego-moc"
  ]
}
