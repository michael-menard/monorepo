# Application Configuration
VITE_APP_NAME=LEGO Projects UI
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=LEGO Projects Management Platform

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=10000

# Authentication Service
VITE_AUTH_SERVICE_URL=http://localhost:5174
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token

# Feature Flags
VITE_FEATURE_GALLERY_ENABLED=true
VITE_FEATURE_WISHLIST_ENABLED=true
VITE_FEATURE_MOC_INSTRUCTIONS_ENABLED=true
VITE_FEATURE_PROFILE_ENABLED=true
VITE_FEATURE_DARK_MODE_ENABLED=true

# Development Tools
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Analytics & Monitoring
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# Storage Configuration
VITE_STORAGE_TYPE=localStorage
VITE_STORAGE_PREFIX=lego_projects_

# Image & Asset Configuration
VITE_IMAGE_CDN_URL=
VITE_MAX_IMAGE_SIZE=5242880
VITE_SUPPORTED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Social Login (if enabled)
VITE_GOOGLE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=
VITE_GITHUB_CLIENT_ID=

# Performance
VITE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_TIMEOUT=300000

# Build Configuration
VITE_BUILD_TARGET=development
VITE_SOURCE_MAPS=true
VITE_BUNDLE_ANALYZER=false
