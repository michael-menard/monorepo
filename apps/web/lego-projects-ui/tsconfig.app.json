{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": false,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/auth": ["../../../packages/auth/src/index.ts"],
      "@repo/auth/*": ["../../../packages/auth/src/*"],
      "@repo/ui": ["../../../packages/ui/src/index.ts"],
      "@repo/ui/*": ["../../../packages/ui/src/*"],
      "@repo/gallery": ["../../../features/gallery/src/index.ts"],
      "@repo/gallery/*": ["../../../features/gallery/src/*"],
      "@repo/wishlist": ["../../../features/wishlist/src/index.ts"],
      "@repo/wishlist/*": ["../../../features/wishlist/src/*"],
      "@repo/profile": ["../../../features/profile/src/index.ts"],
      "@repo/profile/*": ["../../../features/profile/src/*"],
      "@repo/moc": ["../../../features/moc/src/index.ts"],
      "@repo/moc/*": ["../../../features/moc/src/*"]
    }
  },
  "include": [
    "src",
    "src/pages/Wishlist/WishlistSchemas",
    "../../packages/auth/src",
    "../../packages/ui/src"
  ],
  "references": [
    { "path": "../../../packages/auth" },
    { "path": "../../../packages/ui" }
  ]
}
