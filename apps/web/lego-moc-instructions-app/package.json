{
  "name": "lego-moc-instructions-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:route-guard": "playwright test route-guard.e2e.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:all": "pnpm test && pnpm test:e2e",
    "docker:build": "../../scripts/docker-deploy.sh build",
    "docker:dev": "../../scripts/docker-deploy.sh dev",
    "docker:prod": "../../scripts/docker-deploy.sh prod",
    "docker:swarm": "../../scripts/docker-deploy.sh swarm",
    "docker:stop": "../../scripts/docker-deploy.sh stop",
    "docker:down": "../../scripts/docker-deploy.sh stop",
    "docker:logs": "../../scripts/docker-deploy.sh logs lego-app",
    "docker:status": "../../scripts/docker-deploy.sh status",
    "docker:cleanup": "../../scripts/docker-deploy.sh cleanup",
    "docker:up": "../../scripts/docker-deploy.sh prod"
  },
  "dependencies": {
    "@repo/auth": "workspace:*",
    "@repo/ui": "workspace:*",
    "@repo/profile": "workspace:*",
    "@repo/moc-instructions": "workspace:*",
    "@monorepo/shared": "workspace:*",
    "@tanstack/react-router": "^1.16.6",
    "@tanstack/react-router-devtools": "^1.16.6",
    "@tanstack/react-query": "^5.17.9",
    "@tanstack/react-query-devtools": "^5.17.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "web-vitals": "^3.5.0",
    "lucide-react": "^0.294.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-label": "^2.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}