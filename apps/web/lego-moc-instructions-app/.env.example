# LEGO MOC Instructions App - Environment Configuration
# Copy this file to .env and update the values for your local development

# =============================================================================
# API Configuration
# =============================================================================

# DEVELOPMENT (Local Docker Compose)
# These ports match your docker-compose.dev.yml
VITE_LEGO_API_PORT=3000
VITE_AUTH_API_PORT=3001
VITE_FRONTEND_PORT=5173

# Development URLs (optional - derived from ports if not set)
# VITE_API_BASE_URL=/api  # Uses Vite proxy
# VITE_AUTH_API_URL=http://localhost:3001/api/auth

# AWS STAGING/PRODUCTION URLs
# Set these in GitHub Actions environment variables for deployment
# VITE_LEGO_API_URL=https://lego-api-staging.yourdomain.com
# VITE_AUTH_API_URL=https://auth-api-staging.yourdomain.com
# VITE_FRONTEND_URL=https://app-staging.yourdomain.com

# Frontend Client URL (for CORS and redirects)
VITE_CLIENT_URL=http://localhost:5173

# =============================================================================
# Authentication Configuration
# =============================================================================

# Auth domain for cookie configuration
VITE_AUTH_DOMAIN=localhost

# Enable authentication features
VITE_ENABLE_AUTH=true

# Session timeout in minutes (default: 24 hours)
VITE_SESSION_TIMEOUT=1440

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
VITE_ENVIRONMENT=development

# App version (usually auto-populated by build process)
VITE_APP_VERSION=0.1.0

# Enable development tools and debugging
VITE_ENABLE_DEVTOOLS=true

# Enable React DevTools profiling
VITE_ENABLE_PROFILING=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable file upload features
VITE_ENABLE_FILE_UPLOAD=true

# Enable image editing/cropping features
VITE_ENABLE_IMAGE_EDITING=true

# Enable user profiles
VITE_ENABLE_USER_PROFILES=true

# Enable notifications
VITE_ENABLE_NOTIFICATIONS=true

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# =============================================================================
# File Storage Configuration
# =============================================================================

# File storage provider (local, s3, cloudinary)
VITE_STORAGE_PROVIDER=local

# Local storage base URL (for development)
VITE_LOCAL_STORAGE_URL=http://localhost:3001/uploads

# AWS S3 Configuration (if using S3)
# VITE_S3_BUCKET_NAME=your-s3-bucket
# VITE_S3_REGION=us-east-1
# VITE_CLOUDFRONT_URL=https://your-cloudfront-domain.com

# Cloudinary Configuration (if using Cloudinary)
# VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
# VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Maximum file size in MB
VITE_MAX_FILE_SIZE=10

# Allowed file types (comma-separated)
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# =============================================================================
# UI Configuration
# =============================================================================

# Default theme (light, dark, system)
VITE_DEFAULT_THEME=system

# Enable theme switching
VITE_ENABLE_THEME_SWITCH=true

# Default language code
VITE_DEFAULT_LANGUAGE=en

# Enable multi-language support
VITE_ENABLE_I18N=false

# =============================================================================
# Performance Configuration
# =============================================================================

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Number of retry attempts for failed requests
VITE_API_RETRY_ATTEMPTS=3

# Enable request/response logging in development
VITE_ENABLE_API_LOGGING=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# Development Configuration
# =============================================================================

# Enable hot module replacement debugging
VITE_HMR_DEBUG=false

# Enable verbose logging
VITE_VERBOSE_LOGGING=false

# Mock API responses (useful for offline development)
VITE_MOCK_API=false

# Delay for mock API responses in milliseconds
VITE_MOCK_API_DELAY=500

# =============================================================================
# External Integrations
# =============================================================================

# Google Analytics Measurement ID (if using GA)
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (if using Sentry)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Hotjar Site ID for user analytics (if using Hotjar)
# VITE_HOTJAR_SITE_ID=1234567

# =============================================================================
# Security Configuration
# =============================================================================

# CSRF protection settings
VITE_CSRF_ENABLED=true

# Content Security Policy mode (report, enforce)
VITE_CSP_MODE=report

# Enable strict transport security headers
VITE_ENABLE_HSTS=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Enable test utilities in development builds
VITE_ENABLE_TEST_UTILS=true

# Playwright test configuration
VITE_E2E_BASE_URL=http://localhost:5173

# Mock service worker for testing
VITE_ENABLE_MSW=false

# =============================================================================
# Build Configuration
# =============================================================================

# Build target (es2020, esnext, etc.)
VITE_BUILD_TARGET=es2020

# Enable source maps in production
VITE_ENABLE_SOURCE_MAPS=false

# Bundle analyzer configuration
VITE_ANALYZE_BUNDLE=false

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Enable health check endpoint
VITE_ENABLE_HEALTH_CHECK=true

# Health check interval in minutes
VITE_HEALTH_CHECK_INTERVAL=5

# Enable metrics collection
VITE_ENABLE_METRICS=false

# Metrics endpoint URL
# VITE_METRICS_URL=http://localhost:9090/metrics

# =============================================================================
# Documentation
# =============================================================================

# Link to API documentation
VITE_API_DOCS_URL=http://localhost:3001/docs

# Link to main documentation site
VITE_DOCS_URL=http://localhost:3000

# Support/help desk URL
VITE_SUPPORT_URL=https://github.com/your-repo/issues

# =============================================================================
# Sample Development Values
# =============================================================================
# These values work with the default native backend setup:
#
# Backend services should be running on:
# - Auth Service: http://localhost:5000
# - LEGO Projects API: http://localhost:3001
# - MongoDB: mongodb://localhost:27017
#
# Frontend will be available at:
# - Main App: http://localhost:5173 (Vite dev server)
# - Docs: http://localhost:3000 (if running docs site)
#
# To test with different backend URLs, update the API URLs above.
# For production deployment, set environment to 'production' and 
# update all URLs to production domains.
