# Playwright Test Environment Configuration
# Native Backend URLs for E2E testing

# Frontend URL (where Vite dev server runs)
VITE_CLIENT_URL=http://localhost:5173

# Native Backend URLs
VITE_API_BASE_URL=http://localhost:3001
VITE_AUTH_API_URL=http://localhost:5000

# Test-specific settings
VITE_ENVIRONMENT=test
VITE_ENABLE_AUTH=true
VITE_AUTH_DOMAIN=localhost

# Enable features for testing
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_USER_PROFILES=true
VITE_ENABLE_NOTIFICATIONS=true

# Test utilities
VITE_ENABLE_TEST_UTILS=true
VITE_ENABLE_API_LOGGING=true
VITE_VERBOSE_LOGGING=false

# Disable analytics and tracking in tests
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_METRICS=false

# Security settings for testing
VITE_CSRF_ENABLED=true
VITE_CSP_MODE=report

# Storage configuration for testing
VITE_STORAGE_PROVIDER=local
VITE_LOCAL_STORAGE_URL=http://localhost:3001/uploads
VITE_MAX_FILE_SIZE=10

# Mock settings
VITE_MOCK_API=false
