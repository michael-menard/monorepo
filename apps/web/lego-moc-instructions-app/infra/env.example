# =============================================================================
# Lego MOC Instructions App - Infrastructure Environment Configuration
# =============================================================================

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_PROFILE=default
AWS_ACCOUNT_ID=123456789012

# =============================================================================
# Domain Configuration
# =============================================================================
# Main domain for the application
DOMAIN_NAME=lego-moc-instructions.com

# SSL Certificate ARN (must be in us-east-1 for CloudFront)
CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Stage-specific domains
DEV_DOMAIN=dev.lego-moc-instructions.com
STAGING_DOMAIN=staging.lego-moc-instructions.com
PROD_DOMAIN=lego-moc-instructions.com

# =============================================================================
# VPC Configuration (if using VPC)
# =============================================================================
# VPC ID for private resources
VPC_ID=vpc-xxxxxxxxxxxxxxxxx

# Public subnet IDs for ALB
PUBLIC_SUBNET_IDS=subnet-xxxxxxxxxxxxxxxxx,subnet-yyyyyyyyyyyyyyyyy

# Private subnet IDs for Lambda functions
PRIVATE_SUBNET_IDS=subnet-zzzzzzzzzzzzzzzzz,subnet-wwwwwwwwwwwwwwwww

# Security group IDs
SECURITY_GROUP_IDS=sg-xxxxxxxxxxxxxxxxx

# =============================================================================
# Application Configuration
# =============================================================================
# API base URLs for different stages
DEV_API_BASE_URL=https://api.dev.lego-moc-instructions.com
STAGING_API_BASE_URL=https://api.staging.lego-moc-instructions.com
PROD_API_BASE_URL=https://api.lego-moc-instructions.com

# Environment
ENVIRONMENT=dev

# =============================================================================
# S3 Configuration
# =============================================================================
# S3 bucket names (will be prefixed with service name and stage)
STATIC_BUCKET_SUFFIX=static
UPLOADS_BUCKET_SUFFIX=uploads
LOGS_BUCKET_SUFFIX=logs

# =============================================================================
# CloudFront Configuration
# =============================================================================
# Price class for CloudFront distribution
CLOUDFRONT_PRICE_CLASS=PriceClass_100

# Cache settings
DEFAULT_TTL=86400
MAX_TTL=31536000
MIN_TTL=0

# =============================================================================
# WAF Configuration
# =============================================================================
# Rate limiting (requests per IP per 5 minutes)
WAF_RATE_LIMIT=2000

# =============================================================================
# Lambda Configuration
# =============================================================================
# Default memory size for Lambda functions
LAMBDA_MEMORY_SIZE=512

# Default timeout for Lambda functions (seconds)
LAMBDA_TIMEOUT=30

# Log retention period (days)
LOG_RETENTION_DAYS=14

# =============================================================================
# Database Configuration (if using RDS)
# =============================================================================
# Database credentials (stored in Secrets Manager)
DB_USERNAME=admin
DB_PASSWORD=your-secure-password
DB_HOST=your-db-host.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=lego_moc_instructions

# =============================================================================
# Email Configuration (if using SES)
# =============================================================================
# SES configuration
SES_REGION=us-east-1
SES_FROM_EMAIL=noreply@lego-moc-instructions.com
SES_REPLY_TO_EMAIL=support@lego-moc-instructions.com

# =============================================================================
# Monitoring Configuration
# =============================================================================
# CloudWatch alarms
ENABLE_CLOUDWATCH_ALARMS=true

# SNS topic for notifications
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:lego-moc-instructions-notifications

# =============================================================================
# Security Configuration
# =============================================================================
# Enable WAF protection
ENABLE_WAF=true

# Enable CloudTrail logging
ENABLE_CLOUDTRAIL=true

# Enable VPC Flow Logs
ENABLE_VPC_FLOW_LOGS=true

# =============================================================================
# Cost Optimization
# =============================================================================
# Enable cost optimization features
ENABLE_COST_OPTIMIZATION=true

# S3 lifecycle policies
S3_LIFECYCLE_DAYS=90

# =============================================================================
# Development Configuration
# =============================================================================
# Enable local development
ENABLE_OFFLINE=true

# Local development port
OFFLINE_PORT=3000

# Enable debug logging
DEBUG=true

# =============================================================================
# CI/CD Configuration
# =============================================================================
# Deployment settings
AUTO_DEPLOY=false
DEPLOY_ON_PUSH=false

# Build settings
BUILD_OPTIMIZATION=true
MINIFY_CODE=true

# =============================================================================
# Backup Configuration
# =============================================================================
# Enable automated backups
ENABLE_BACKUPS=true

# Backup retention period (days)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# Disaster Recovery
# =============================================================================
# Enable cross-region replication
ENABLE_CROSS_REGION_REPLICATION=false

# Secondary region
SECONDARY_REGION=us-west-2

# =============================================================================
# Compliance Configuration
# =============================================================================
# Enable compliance features
ENABLE_COMPLIANCE=false

# Data retention policy
DATA_RETENTION_DAYS=2555  # 7 years

# =============================================================================
# Performance Configuration
# =============================================================================
# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Performance thresholds
API_LATENCY_THRESHOLD=1000  # milliseconds
ERROR_RATE_THRESHOLD=5      # percentage

# =============================================================================
# Feature Flags
# =============================================================================
# Enable specific features
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_CACHE_INVALIDATION=true
ENABLE_FILE_UPLOAD=true
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# Testing Configuration
# =============================================================================
# Enable infrastructure testing
ENABLE_INFRASTRUCTURE_TESTS=true

# Test environment
TEST_ENVIRONMENT=test

# =============================================================================
# Documentation
# =============================================================================
# Enable automatic documentation generation
ENABLE_DOCS_GENERATION=false

# Documentation output directory
DOCS_OUTPUT_DIR=./docs 