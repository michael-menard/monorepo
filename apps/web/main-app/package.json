{
  "name": "@repo/main-app",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "description": "Main shell application for LEGO MOC Instructions platform",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "build:check": "vite build && tsc",
    "serve": "vite preview",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:coverage:open": "vitest run --coverage && open coverage/index.html",
    "analyze": "vite-bundle-analyzer dist/stats.json",
    "build:analyze": "vite build --mode analyze && npm run analyze",
    "perf:build": "vite build --mode production && npm run analyze",
    "perf:test": "npm run test:coverage && npm run build:analyze",
    "lint": "eslint src/ --fix",
    "format": "prettier --write src/",
    "check": "prettier --write src/ && eslint --fix src/",
    "type-check": "tsc --noEmit",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "6.13.1",
    "@hookform/resolvers": "5.2.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@repo/api-client": "workspace:*",
    "@repo/app-component-library": "workspace:*",
    "@repo/app-dashboard": "workspace:*",
    "@repo/app-instructions-gallery": "workspace:*",
    "@repo/app-wishlist-gallery": "workspace:*",
    "@repo/app-sets-gallery": "workspace:*",
    "@repo/cache": "workspace:*",
    "@repo/design-system": "workspace:*",
    "@repo/gallery": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/upload-types": "workspace:*",
    "@tanstack/react-router": "^1.130.2",
    "@tanstack/react-router-devtools": "^1.130.2",
    "aws-amplify": "6.15.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "12.23.24",
    "lucide-react": "^0.476.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "7.66.1",
    "react-redux": "^9.2.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "24.10.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/web": "0.0.294",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/coverage-v8": "4.0.13",
    "@vitest/ui": "4.0.13",
    "eslint": "^9.30.1",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "1.2.3",
    "vitest": "^4.0.13",
    "web-vitals": "^4.2.4",
    "webpack-bundle-analyzer": "5.0.1"
  }
}
