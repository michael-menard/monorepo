# lego-projects-api environment example
# Copy to .env and adjust per environment

# Runtime
NODE_ENV=development
PORT=3000

# Auth / JWT
# Must match the signing secret used by your auth-service
JWT_SECRET=changeme-development-secret
# Comma-separated list of allowed JWT issuers (default aligns with auth-service)
AUTH_JWT_ISSUER=auth-service
# Base URL of the auth-service (used if/when calling out for refresh, etc.)
AUTH_API=http://localhost:5000/api/auth

# CORS / Frontend Origin
# Primary frontend/app origin used to allow cross-origin requests
APP_ORIGIN=http://localhost:5173
# Back-compat variable if some parts use FRONTEND_URL
FRONTEND_URL=http://localhost:5173

# Postgres (Drizzle)
# Format: postgres://user:password@host:port/database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/lego_projects

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS S3 (used when NODE_ENV !== development)
# If left blank in development, local disk storage is used
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Logging
LOG_LEVEL=info
