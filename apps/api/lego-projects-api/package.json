{
  "name": "lego-projects-api",
  "version": "1.0.0",
  "description": "Backend API for LEGO projects",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts",
    "docker:build": "../../../scripts/docker-deploy.sh build",
    "docker:dev": "../../../scripts/docker-deploy.sh dev",
    "docker:prod": "../../../scripts/docker-deploy.sh prod",
    "docker:swarm": "../../../scripts/docker-deploy.sh swarm",
    "docker:stop": "../../../scripts/docker-deploy.sh stop",
    "docker:down": "../../../scripts/docker-deploy.sh stop",
    "docker:logs": "../../../scripts/docker-deploy.sh logs backend-api",
    "docker:status": "../../../scripts/docker-deploy.sh status",
    "docker:cleanup": "../../../scripts/docker-deploy.sh cleanup",
    "docker:up": "../../../scripts/docker-deploy.sh prod"
  },
  "keywords": [
    "lego",
    "api",
    "express",
    "postgresql",
    "elasticsearch"
  ],
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
