{
  "name": "@repo/api-auth-service",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf node_modules",
    "reinstall": "pnpm run clean && pnpm install",
    "killport": "chmod +x killport.sh && ./killport.sh",
    "reset": "pnpm run killport 5000 && pnpm run killport 5001 && pnpm run dev",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "seed:users": "tsx scripts/seed-users.ts",
    "seed:users:clear": "tsx scripts/seed-users.ts --clear",
    "seed:users:test": "tsx scripts/seed-users.ts --env=test",
    "seed:users:test:clear": "tsx scripts/seed-users.ts --clear --env=test"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.3",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "nodemailer": "^7.0.5",
    "pino": "9.9.0",
    "pino-http": "10.5.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^24.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "10.0.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.30.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.1",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  }
}
