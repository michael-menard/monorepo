{
  "name": "@repo/api-auth-service",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && pnpm install",
    "killport": "chmod +x killport.sh && ./killport.sh",
    "reset": "npm run killport 5000 && npm run killport 5001 && npm run dev",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@react-constructs/utils": "workspace:*",
    "@repo/api-shared": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mailtrap": "^4.1.0",
    "mongoose": "^8.15.1",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^24.0.1",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^2.1.8",
    "dotenv": "^16.6.1",
    "eslint": "^9.30.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.1",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  }
}