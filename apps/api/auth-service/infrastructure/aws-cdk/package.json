{
  "name": "auth-service-infrastructure",
  "version": "1.0.0",
  "private": true,
  "description": "AWS CDK infrastructure for Auth Service",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "diff": "cdk diff",
    "deploy": "cdk deploy",
    "deploy:dev": "ENVIRONMENT=dev cdk deploy",
    "deploy:staging": "ENVIRONMENT=staging cdk deploy",
    "deploy:production": "ENVIRONMENT=production cdk deploy",
    "destroy": "cdk destroy",
    "synth": "cdk synth",
    "deploy:infra": "./scripts/deploy-infrastructure.sh",
    "deploy:infra:dev": "ENVIRONMENT=dev ./scripts/deploy-infrastructure.sh",
    "deploy:infra:staging": "ENVIRONMENT=staging ./scripts/deploy-infrastructure.sh",
    "deploy:infra:production": "ENVIRONMENT=production ./scripts/deploy-infrastructure.sh",
    "deploy:with-seeding": "./scripts/deploy-with-seeding.sh",
    "deploy:with-seeding:dev": "ENVIRONMENT=dev ./scripts/deploy-with-seeding.sh",
    "deploy:with-seeding:staging": "ENVIRONMENT=staging ./scripts/deploy-with-seeding.sh",
    "deploy:with-seeding:production": "ENVIRONMENT=production ./scripts/deploy-with-seeding.sh",
    "seed": "./scripts/seed-database.sh",
    "seed:dev": "ENVIRONMENT=dev ./scripts/seed-database.sh",
    "seed:staging": "ENVIRONMENT=staging ./scripts/seed-database.sh",
    "seed:production": "ENVIRONMENT=production ./scripts/seed-database.sh",
    "seed:clear": "./scripts/seed-database.sh --clear",
    "seed:force": "./scripts/seed-database.sh --force"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "aws-cdk": "^2.147.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.147.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  }
}
