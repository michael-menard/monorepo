{
    "version": "2017-02-28",
    "operation": "Query",
    "index": "UserIdIndex",
    "query": {
        "expression": "userId = :userId",
        "expressionValues": {
            ":userId": $util.dynamodb.toDynamoDBJson($ctx.args.userId)
        }
    },
    "scanIndexForward": false,
    #if($ctx.args.limit)
        "limit": $ctx.args.limit,
    #end
    #if($ctx.args.nextToken)
        "nextToken": $ctx.args.nextToken,
    #end
} 