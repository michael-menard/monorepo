{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./.build",
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/core/*": ["./core/*"],
      "@/endpoints/*": ["./endpoints/*"],
      "@/infrastructure/*": ["./infrastructure/*"]
    }
  },
  "include": [
    "core/**/*.ts",
    "endpoints/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".serverless",
    ".build",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "infrastructure/**/*"
  ]
}
