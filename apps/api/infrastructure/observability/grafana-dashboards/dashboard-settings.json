{
  "dashboardSettings": {
    "refreshIntervals": {
      "lambda-performance": "1m",
      "api-gateway-performance": "1m",
      "cloudfront-performance": "5m",
      "system-health": "2m"
    },
    "timeRanges": {
      "lambda-performance": "6h",
      "api-gateway-performance": "6h",
      "cloudfront-performance": "24h",
      "system-health": "12h"
    },
    "queryOptimization": {
      "defaultPeriod": "300",
      "maxDataPoints": 1440,
      "cacheTimeout": "30s"
    },
    "alertThresholds": {
      "lambda": {
        "errorRate": {
          "warning": 1,
          "critical": 5
        },
        "duration": {
          "warning": 1000,
          "critical": 5000
        },
        "throttles": {
          "warning": 1,
          "critical": 10
        }
      },
      "apiGateway": {
        "errorRate4xx": {
          "warning": 5,
          "critical": 10
        },
        "errorRate5xx": {
          "warning": 1,
          "critical": 5
        },
        "latency": {
          "warning": 1000,
          "critical": 5000
        }
      },
      "cloudfront": {
        "cacheHitRatio": {
          "warning": 70,
          "critical": 50
        },
        "errorRate": {
          "warning": 1,
          "critical": 5
        }
      },
      "infrastructure": {
        "aurora": {
          "cpuUtilization": {
            "warning": 70,
            "critical": 90
          },
          "connections": {
            "warning": 50,
            "critical": 100
          }
        },
        "redis": {
          "memoryUsage": {
            "warning": 80,
            "critical": 95
          }
        }
      }
    },
    "panelOptimization": {
      "legendSettings": {
        "displayMode": "table",
        "placement": "bottom",
        "calcs": ["lastNotNull", "max", "min"]
      },
      "tooltipSettings": {
        "mode": "multi",
        "sort": "desc"
      },
      "axisSettings": {
        "softMin": 0,
        "unit": "auto"
      }
    }
  },
  "cloudWatchApiOptimization": {
    "rateLimiting": {
      "maxRequestsPerSecond": 10,
      "burstLimit": 50
    },
    "queryBatching": {
      "enabled": true,
      "maxBatchSize": 100
    },
    "caching": {
      "enabled": true,
      "ttl": "5m",
      "maxCacheSize": "100MB"
    }
  }
}
