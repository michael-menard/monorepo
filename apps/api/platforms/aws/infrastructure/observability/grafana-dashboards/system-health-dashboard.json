{
  "dashboard": {
    "id": null,
    "uid": "system-health",
    "title": "System Health",
    "tags": ["infrastructure", "health", "system"],
    "style": "dark",
    "timezone": "UTC",
    "refresh": "2m",
    "folderId": null,
    "folderUid": "infrastructure-folder",
    "time": {
      "from": "now-12h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "stage",
          "type": "custom",
          "options": [
            { "text": "dev", "value": "dev", "selected": true },
            { "text": "staging", "value": "staging", "selected": false },
            { "text": "prod", "value": "prod", "selected": false }
          ],
          "current": { "text": "dev", "value": "dev" }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Aurora Database Connections (Active)",
        "type": "timeseries",
        "targets": [
          {
            "datasource": "CloudWatch-UserMetrics",
            "namespace": "AWS/RDS",
            "metricName": "DatabaseConnections",
            "dimensions": {
              "DBClusterIdentifier": "lego-api-serverless-$stage-aurora-cluster"
            },
            "statistics": ["Average", "Maximum"],
            "period": "300"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "short",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 50 },
                { "color": "red", "value": 100 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Aurora CPU Utilization (%)",
        "type": "timeseries",
        "targets": [
          {
            "datasource": "CloudWatch-UserMetrics",
            "namespace": "AWS/RDS",
            "metricName": "CPUUtilization",
            "dimensions": {
              "DBClusterIdentifier": "lego-api-serverless-$stage-aurora-cluster"
            },
            "statistics": ["Average", "Maximum"],
            "period": "300"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "percent",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 70 },
                { "color": "red", "value": 90 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 }
      },
      {
        "id": 3,
        "title": "Aurora Freeable Memory (MB)",
        "type": "timeseries",
        "targets": [
          {
            "datasource": "CloudWatch-UserMetrics",
            "namespace": "AWS/RDS",
            "metricName": "FreeableMemory",
            "dimensions": {
              "DBClusterIdentifier": "lego-api-serverless-$stage-aurora-cluster"
            },
            "statistics": ["Average"],
            "period": "300"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "bytes",
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 1073741824 },
                { "color": "green", "value": 2147483648 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 }
      },
      {
        "id": 4,
        "title": "ElastiCache Redis Memory Usage (%)",
        "type": "timeseries",
        "targets": [
          {
            "datasource": "CloudWatch-UserMetrics",
            "namespace": "AWS/ElastiCache",
            "metricName": "DatabaseMemoryUsagePercentage",
            "dimensions": {
              "CacheClusterId": "lego-api-serverless-$stage-redis"
            },
            "statistics": ["Average", "Maximum"],
            "period": "300"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "percent",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 80 },
                { "color": "red", "value": 95 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 6 }
      },
      {
        "id": 5,
        "title": "OpenSearch Cluster Health",
        "type": "stat",
        "targets": [
          {
            "datasource": "CloudWatch-UserMetrics",
            "namespace": "AWS/ES",
            "metricName": "ClusterStatus.green",
            "dimensions": {
              "DomainName": "lego-api-serverless-$stage-opensearch",
              "ClientId": "*"
            },
            "statistics": ["Maximum"],
            "period": "300"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "unit": "short",
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            },
            "mappings": [
              { "options": { "0": { "text": "Red" } }, "type": "value" },
              { "options": { "1": { "text": "Green" } }, "type": "value" }
            ]
          }
        },
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 6 }
      },
      {
        "id": 6,
        "title": "S3 Storage Metrics (Bucket Sizes)",
        "type": "timeseries",
        "targets": [
          {
            "datasource": "CloudWatch-UserMetrics",
            "namespace": "AWS/S3",
            "metricName": "BucketSizeBytes",
            "dimensions": {
              "BucketName": "lego-api-serverless-$stage-*",
              "StorageType": "StandardStorage"
            },
            "statistics": ["Average"],
            "period": "86400"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "bytes"
          }
        },
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 6 }
      },
      {
        "id": 7,
        "title": "S3 Request Counts",
        "type": "timeseries",
        "targets": [
          {
            "datasource": "CloudWatch-UserMetrics",
            "namespace": "AWS/S3",
            "metricName": "NumberOfObjects",
            "dimensions": {
              "BucketName": "lego-api-serverless-$stage-*",
              "StorageType": "AllStorageTypes"
            },
            "statistics": ["Average"],
            "period": "86400"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "short"
          }
        },
        "gridPos": { "h": 6, "w": 12, "x": 0, "y": 12 }
      },
      {
        "id": 8,
        "title": "ECS Task Health (Placeholder for Phase 4)",
        "type": "text",
        "targets": [],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" }
          }
        },
        "options": {
          "content": "**ECS Task Health Monitoring**\n\nThis panel is a placeholder for future ECS task health monitoring that will be implemented in Phase 4.\n\nMetrics to be added:\n- Running task count\n- Task CPU utilization\n- Task memory utilization\n- Service health checks\n- Task restart frequency",
          "mode": "markdown"
        },
        "gridPos": { "h": 6, "w": 12, "x": 12, "y": 12 }
      },
      {
        "id": 9,
        "title": "System Overview - Key Health Indicators",
        "type": "table",
        "targets": [
          {
            "datasource": "CloudWatch-UserMetrics",
            "namespace": "AWS/RDS",
            "metricName": "CPUUtilization",
            "dimensions": {
              "DBClusterIdentifier": "lego-api-serverless-$stage-aurora-cluster"
            },
            "statistics": ["Average"],
            "period": "300",
            "refId": "aurora_cpu"
          },
          {
            "datasource": "CloudWatch-UserMetrics",
            "namespace": "AWS/ElastiCache",
            "metricName": "DatabaseMemoryUsagePercentage",
            "dimensions": {
              "CacheClusterId": "lego-api-serverless-$stage-redis"
            },
            "statistics": ["Average"],
            "period": "300",
            "refId": "redis_memory"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "unit": "percent",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 70 },
                { "color": "red", "value": 90 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 24, "x": 0, "y": 18 }
      }
    ]
  },
  "overwrite": true
}
