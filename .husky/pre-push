#!/bin/sh
# CodeRabbit-style Pre-push Analysis

echo "ü§ñ Running CodeRabbit-style analysis before push..."
echo "=================================================="

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Track issues found
ISSUES_FOUND=0

# Get the range of commits being pushed
remote="$1"
url="$2"

# Get commits being pushed
if [ "$remote" = "origin" ]; then
    # Get commits that are ahead of origin/main
    COMMITS=$(git rev-list origin/main..HEAD 2>/dev/null || git rev-list HEAD)
    if [ -z "$COMMITS" ]; then
        echo "‚ÑπÔ∏è  No new commits to analyze."
        exit 0
    fi
    
    echo "üìä Analyzing $(echo "$COMMITS" | wc -l | tr -d ' ') commit(s)..."
    echo ""
fi

# 1. Security Analysis
echo -e "${BLUE}üîí Security Analysis${NC}"
echo "-------------------"

# Check for hardcoded secrets in commits being pushed (exclude this hook file and common false positives)
echo "üîç Scanning for hardcoded secrets..."
SECRET_FILES=$(git diff origin/main..HEAD --name-only 2>/dev/null | grep -v "\.husky/\|\.md$\|package\.json$\|\.lock$" | xargs grep -l "api[_-]key\s*=\|secret\s*=\|password\s*=\|token\s*=" 2>/dev/null || true)
if [ -n "$SECRET_FILES" ]; then
    echo -e "${RED}‚ùå Potential secrets found in:${NC}"
    echo "$SECRET_FILES"
    echo "üí° Consider using environment variables instead"
    ISSUES_FOUND=$((ISSUES_FOUND + 1))
else
    echo -e "${GREEN}‚úÖ No obvious secrets detected${NC}"
fi

# Run security audit
echo "üîç Running dependency security audit..."
if pnpm audit --audit-level moderate --json > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ No security vulnerabilities found${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Security vulnerabilities detected${NC}"
    echo "üí° Run 'pnpm audit' for details"
    ISSUES_FOUND=$((ISSUES_FOUND + 1))
fi

echo ""

# 2. Code Quality Analysis
echo -e "${BLUE}üìù Code Quality Analysis${NC}"
echo "------------------------"

# TypeScript strict checks
echo "üîç Running TypeScript strict checks..."
if pnpm turbo check-types --filter="...[HEAD^1]" > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ TypeScript checks passed${NC}"
else
    echo -e "${RED}‚ùå TypeScript errors found${NC}"
    echo "üí° Run 'pnpm check-types' for details"
    ISSUES_FOUND=$((ISSUES_FOUND + 1))
fi

# Linting checks (changed files only)
echo "üîç Running ESLint analysis on changed files..."
if pnpm lint:changed > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ Linting checks passed${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Linting issues found in changed files${NC}"
    echo "üí° Run 'pnpm lint:changed' for details"
    ISSUES_FOUND=$((ISSUES_FOUND + 1))
fi

echo ""

# 3. Performance Analysis
echo -e "${BLUE}‚ö° Performance Analysis${NC}"
echo "-----------------------"

# Check for common React performance issues
echo "üîç Scanning for React performance issues..."
PERF_ISSUES=0

# Check for missing useCallback/useMemo in changed files
CHANGED_FILES=$(git diff origin/main..HEAD --name-only 2>/dev/null | grep -E '\.(tsx?|jsx?)$' || true)
if [ -n "$CHANGED_FILES" ]; then
    if echo "$CHANGED_FILES" | xargs grep -l "useState\|useEffect" 2>/dev/null | xargs grep -L "useCallback\|useMemo" 2>/dev/null | head -1 > /dev/null; then
        echo -e "${YELLOW}‚ö†Ô∏è  Consider using useCallback/useMemo for performance optimization${NC}"
        PERF_ISSUES=$((PERF_ISSUES + 1))
    fi

    # Check for expensive operations in render
    if echo "$CHANGED_FILES" | xargs grep -l "\.map\|\.filter\|\.reduce" 2>/dev/null | head -1 > /dev/null; then
        echo -e "${YELLOW}‚ö†Ô∏è  Consider memoizing expensive array operations${NC}"
        PERF_ISSUES=$((PERF_ISSUES + 1))
    fi
fi

if [ $PERF_ISSUES -eq 0 ]; then
    echo -e "${GREEN}‚úÖ No obvious performance issues detected${NC}"
fi

echo ""

# 4. Test Coverage
echo -e "${BLUE}üß™ Test Analysis${NC}"
echo "----------------"

echo "üîç Running tests for affected code..."
if pnpm turbo test --filter="...[HEAD]" > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ All tests passing${NC}"
else
    echo -e "${RED}‚ùå Test failures detected${NC}"
    echo "üí° Run 'pnpm turbo test --filter=\"...[HEAD]\"' for details"
    ISSUES_FOUND=$((ISSUES_FOUND + 1))
fi

echo ""

# 5. Build Verification
echo -e "${BLUE}üèóÔ∏è  Build Verification${NC}"
echo "--------------------"

echo "üîç Verifying build integrity..."
if pnpm turbo build --filter="...[HEAD]" > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ Build successful${NC}"
else
    echo -e "${RED}‚ùå Build failed${NC}"
    echo "üí° Run 'pnpm turbo build --filter=\"...[HEAD]\"' for details"
    ISSUES_FOUND=$((ISSUES_FOUND + 1))
fi

echo ""

# Summary
echo "=================================================="
if [ $ISSUES_FOUND -eq 0 ]; then
    echo -e "${GREEN}üéâ All checks passed! Ready to push.${NC}"
    echo ""
    echo -e "${BLUE}üìã Analysis Summary:${NC}"
    echo "‚úÖ Security: No issues"
    echo "‚úÖ Code Quality: Passed"
    echo "‚úÖ Performance: No obvious issues"
    echo "‚úÖ Tests: Passing"
    echo "‚úÖ Build: Successful"
    exit 0
else
    echo -e "${RED}‚ùå Found $ISSUES_FOUND issue(s) that should be addressed${NC}"
    echo ""
    echo -e "${YELLOW}üí° Recommendations:${NC}"
    echo "1. Fix the issues listed above"
    echo "2. Run the suggested commands for detailed information"
    echo "3. Consider running 'pnpm lint:changed --fix' to auto-fix some issues"
    echo ""
    echo -e "${BLUE}ü§ñ This analysis mimics CodeRabbit's review process${NC}"

    # Allow bypassing with environment variable
    if [ "$SKIP_PUSH_CHECKS" = "1" ]; then
        echo -e "${YELLOW}‚ö†Ô∏è  SKIP_PUSH_CHECKS=1 set, pushing with known issues...${NC}"
        exit 0
    fi

    # Try to get interactive confirmation
    echo "Push anyway? (y/N) [Set SKIP_PUSH_CHECKS=1 to bypass]"
    if [ -t 0 ]; then
        read -r response
    elif [ -e /dev/tty ]; then
        read -r response < /dev/tty 2>/dev/null || response="n"
    else
        # Non-interactive environment, default to blocking
        echo "Non-interactive environment detected, blocking push."
        response="n"
    fi

    if [ "$response" = "y" ] || [ "$response" = "Y" ]; then
        echo -e "${YELLOW}‚ö†Ô∏è  Pushing with known issues...${NC}"
        exit 0
    else
        echo -e "${GREEN}üëç Good choice! Fix the issues and try again.${NC}"
        exit 1
    fi
fi
